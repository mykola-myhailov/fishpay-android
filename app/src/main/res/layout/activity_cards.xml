<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.myhailov.mykola.fishpay.activities.profile.CardsActivity">



    <LinearLayout
        android:background="@color/black_light"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivBack"
            android:padding="16dp"
            android:tint="@color/white"
            android:src="@drawable/arrow_back"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize" />

        <RelativeLayout
            android:layout_marginEnd="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="18sp"
                android:id="@+id/tvToolBarTitle"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:background="@android:color/transparent"
                android:text="@string/app_name"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:background="@color/black_light"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textColor="@color/gray_light"
                android:text="@string/card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_name_error"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                android:layout_weight="1"
                android:textColor="@android:color/holo_red_light"
                android:gravity="end"
                android:text="@string/minimum_4_char"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_card_name"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textSize="22sp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:hint="@string/input_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"/>
        <View
            android:layout_marginStart="38dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textColor="@color/gray_light"
                android:text="@string/card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_number_error"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                android:layout_weight="1"
                android:textColor="@android:color/holo_red_light"
                android:gravity="end"
                android:text="@string/incomplete_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <EditText
            android:id="@+id/et_card_number"
            android:singleLine="true"
            android:textSize="22sp"
            android:inputType="phone"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:hint="@string/input_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLength="19"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_card"
        android:padding="12dp"
        android:layout_gravity="end"
        android:textSize="20sp"
        android:text="@string/add_card"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/blue1"/>

