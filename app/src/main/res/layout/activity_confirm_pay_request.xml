<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.pay_requests.ConfirmPayRequestActivity">

    <RelativeLayout
        android:background="@color/light_grey"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/ivBack"
            android:padding="20dp"
            android:src="@drawable/arrow_back"
            android:tint="@color/blue1"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:padding="16dp"
            android:layout_marginEnd="50dp"
            android:layout_toEndOf="@id/ivBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:id="@+id/tvToolBarTitle"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue1"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:background="@android:color/transparent"
                tools:text="@string/app_name"/>
        </RelativeLayout>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_light"/>
    </RelativeLayout>


    <LinearLayout
        android:padding="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_marginEnd="12dp"
            android:layout_gravity="center_vertical"
            android:layout_width="86dp"
            android:layout_height="86dp">
            <ImageView
                android:id="@+id/iv_avatar"
                android:scaleType="centerCrop"
                android:background="@color/gray_very_light"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@drawable/awatar_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_marginTop="-2dp"
                android:id="@+id/tv_initials"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="4dp"
                android:textAllCaps="true"
                android:text="as"
                android:textColor="@color/black_light"
                android:textSize="42sp" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_contact_name"
                android:gravity="center_vertical"
                android:layout_weight="1"
                tools:text="Jonny"
                android:textColor="@color/black_light"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_user_name"
                android:gravity="center_vertical"
                android:layout_weight="1"
                tools:text="Jonathan Blow"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_phone"
                android:gravity="center_vertical"
                android:layout_weight="1"
                tools:text="380979224504"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="На сумму"/>

    <LinearLayout
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/met_amount"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:background="@null"
            android:singleLine="true"
            android:gravity="end"
            android:textColor="@color/black1"
            android:textSize="22sp"
            android:cursorVisible="false"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="false"
            android:focusableInTouchMode="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:text="@string/uah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"/>

    </LinearLayout>
    <View
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="22dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey2"/>

    <TextView
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Карта для приема"/>
    <TextView
        tools:text="Наличные"
        android:gravity="end"
        android:id="@+id/tv_card"
        android:maxLines="1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:singleLine="true"
        android:textSize="22sp"
        android:textColorHint="@color/grey2"
        android:textColor="@color/black1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"/>
    <View
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="22dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey2"/>

    <TextView
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваш пароль"/>

    <EditText
        android:id="@+id/password"
        android:layout_marginStart="20dp"
        android:inputType="textPassword"
        android:background="@null"
        android:singleLine="true"
        android:gravity="end"
        android:textColor="@color/black1"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="22dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey2"/>

    <TextView
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/tv_apply"
        android:layout_marginEnd="22dp"
        android:layout_gravity="end"
        android:padding="4dp"
        android:textColor="@color/blue1"
        android:text="Подтвердить"
        android:layout_marginTop="12dp"
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>