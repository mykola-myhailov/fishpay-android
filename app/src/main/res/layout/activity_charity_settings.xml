<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.myhailov.mykola.fishpay.activities.charity.CharitySettingsActivity">

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/relativeLayout">

        <ImageView
                android:id="@+id/ivBack"
                android:padding="16dp"
                android:src="@drawable/arrow_back"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"/>

        <RelativeLayout
                android:layout_toEndOf="@id/ivBack"
                android:layout_marginEnd="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:textSize="18sp"
                    android:id="@+id/tvToolBarTitle"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:background="@android:color/transparent"
                    tools:text="@string/app_name"/>
        </RelativeLayout>

        <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="00.5dp"
                android:background="@color/grey2"/>
    </RelativeLayout>

    <TextView
            tools:text="Помощь потерпевшим от урагана Ирма"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:id="@+id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:text="@string/publication"
            android:textSize="17sp"
            android:textColor="@color/grey_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_visible"
            app:layout_constraintStart_toStartOf="@+id/tv_title"
            />

    <TextView
            android:text="@string/public_charity"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_visible"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="@+id/tv_title"
            />

    <TextView
            android:textSize="17sp"
            android:textColor="@color/grey_text"
            android:text="@string/lists_of_contributors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_list_donation"/>

    <TextView
            android:text="@string/charity_open"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_list_donation"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_visible"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_visible"/>

    <TextView
            android:textSize="17sp"
            android:textColor="@color/grey_text"
            android:text="@string/use_creator_pseudonym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintBaseline_toBaselineOf="@+id/switch_name"/>

    <View
            android:layout_alignParentBottom="true"
            android:layout_width="0dp"
            android:layout_height="00.5dp"
            android:background="@color/grey2"
            android:id="@+id/view_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_visible"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintEnd_toEndOf="parent"/>

    <View
            android:layout_alignParentBottom="true"
            android:layout_width="0dp"
            android:layout_height="00.5dp"
            android:background="@color/grey2"
            android:id="@+id/view_3"
            app:layout_constraintTop_toBottomOf="@+id/tv_list_donation"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            />

    <Switch
            android:text=""
            android:theme="@style/SwitchStyle"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_name"
            app:layout_constraintEnd_toEndOf="@+id/tv_list_donation"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_list_donation"/>

    <View
            android:layout_alignParentBottom="true"
            android:layout_width="0dp"
            android:layout_height="00.5dp"
            android:background="@color/grey2"
            android:id="@+id/view_4"
            app:layout_constraintTop_toBottomOf="@+id/switch_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"/>

    <TextView
            android:textSize="17sp"
            android:textColor="@color/grey_text"
            android:text="@string/creator_pseudonym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            app:layout_constraintStart_toStartOf="@+id/textView14"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/switch_name"
            app:layout_constraintEnd_toEndOf="@+id/switch_name"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
            android:theme="@style/editTextTheme"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:enabled="false"
            android:background="@null"
            android:hint="@string/input_name"
            android:textColorHint="@color/grey_text_hint"
            android:textCursorDrawable="@color/grey"
            tools:text="фонд «Яблочко»"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_pseudonym"
            app:layout_constraintStart_toStartOf="@+id/textView15"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            app:layout_constraintEnd_toEndOf="@+id/switch_name"
            app:layout_constraintHorizontal_bias="0.0"/>

    <View
            android:layout_alignParentBottom="true"
            android:layout_width="0dp"
            android:layout_height="00.5dp"
            android:background="@color/grey2"
            android:id="@+id/view_5"
            app:layout_constraintTop_toBottomOf="@+id/et_pseudonym"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"/>

    <TextView
            android:text="@string/close_charity"
            android:textSize="36sp"
            android:textColor="@color/blue_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_close"
            app:layout_constraintEnd_toEndOf="@+id/et_pseudonym"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_pseudonym"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.3"/>
</android.support.constraint.ConstraintLayout>
