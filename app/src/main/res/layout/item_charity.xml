<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/swipe_layout"
        app:mode="same_level"
        app:dragEdge="right">

    <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center"
            android:background="@android:color/holo_red_dark"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="@string/report"/>

    <LinearLayout
            android:id="@+id/ll_card"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Допомога постраждалим від вибуху на шахті Степова"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:textSize="17sp"
                android:textColor="#323232"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_percent"
                android:layout_marginEnd="32dp"/>

        <TextView
                android:text="Фонд «Допомога»"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_author_name"
                android:textSize="15sp"
                android:textColor="#919191"
                app:layout_constraintStart_toStartOf="@+id/tv_title"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

        <TextView
                android:text="67% "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_percent"
                android:textSize="24sp"
                android:textColor="#323232"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title"
                app:layout_constraintTop_toTopOf="@+id/tv_title"
                />

        <TextView
                android:text="13000.00 |грн"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_goal"
                android:textSize="13sp"
                android:textColor="#919191"
                app:layout_constraintStart_toEndOf="@+id/tv_author_name"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_author_name"/>
    </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>