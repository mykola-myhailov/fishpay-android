<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container_charity_details_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                tools:text="10000000000"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_goal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_collected"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_currency"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="8dp"
                android:visibility="visible"/>

        <TextView
                android:text="@string/uah2"
                android:textSize="24sp"
                android:textColor="@color/grey_text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_currency"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_goal"
                app:layout_constraintEnd_toStartOf="@+id/tv_progress"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/tv_goal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                android:visibility="visible"/>

        <TextView
                tools:text="5.5|%"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_progress"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/tv_goal"
                app:layout_constraintBottom_toBottomOf="@+id/tv_goal"
                android:visibility="gone"/>

        <TextView
                tools:text="Всем привет у нашего друга Олега Прилуцкого совсем скоро день рождения, поэтому предлагаю скинутся ему на подарок, а именно IpadPro как раз поступил на продажу в Цытрусе"
                android:textSize="17sp"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_description"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_goal"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:text="@string/already_collected"
                android:textSize="17sp"
                android:textColor="@color/grey_text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_collected"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"/>

        <TextView
                tools:text="10000000000"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_goal_finish"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_collected"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_currency_finish"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="1.0"/>

        <TextView
                android:text="@string/uah2"
                android:textSize="24sp"
                android:textColor="@color/grey_text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_currency_finish"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_goal_finish"
                app:layout_constraintEnd_toStartOf="@+id/tv_progress"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/tv_goal_finish"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:visibility="gone"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
