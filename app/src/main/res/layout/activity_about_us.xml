<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.myhailov.mykola.fishpay.activities.AboutUsActivity">

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/relativeLayout4">

        <ImageView
                android:id="@+id/ivBack"
                android:padding="16dp"
                android:src="@drawable/arrow_back"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"/>

        <RelativeLayout
                android:layout_toEndOf="@id/ivBack"
                android:layout_marginEnd="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:textSize="18sp"
                    android:id="@+id/tvToolBarTitle"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:background="@android:color/transparent"
                    tools:text="@string/app_name"/>
        </RelativeLayout>

        <ImageView
                android:id="@+id/iv_settings"
                android:padding="16dp"
                android:src="@drawable/settings"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"/>

        <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="00.5dp"
                android:background="@color/grey2"/>
    </RelativeLayout>

    <ImageView
            app:layout_constraintDimensionRatio="4:2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/logo_fish"
            android:id="@+id/imageView10"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout4"/>

    <ImageView
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/about_background"
            android:id="@+id/imageView12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    <TextView
            android:textSize="22sp"
            android:textColor="@color/grey_text_currency"
            android:text="@string/version_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView64"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView10"
            app:layout_constraintEnd_toStartOf="@+id/tv_version"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
            android:textSize="22sp"
            android:textColor="@color/grey_text_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_version"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView64"
            tools:text="8.0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView64"
            app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
            android:textSize="22sp"
            android:textColor="@color/grey_text_currency"
            android:text="@string/version_api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView67"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView64"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/tv_version_api"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginEnd="8dp"/>

    <TextView
            android:textSize="22sp"
            android:textColor="@color/grey_text_currency"
            tools:text="9.1.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_version_api"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView67"
            app:layout_constraintStart_toEndOf="@+id/textView67"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#C3C3C8"
            android:text="@string/contact_support"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView72"/>

    <TextView
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="#9e9e9e"
            android:text="@string/privacy_licence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView72"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>

    <TextView
            android:textSize="18sp"
            android:textColor="@color/grey_text_title"
            android:text="@string/site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_site"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_facebook"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/facebook"
            android:id="@+id/iv_facebook"
            app:layout_constraintStart_toEndOf="@+id/iv_insta"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/iv_twiter"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView67"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/twitter"
            android:id="@+id/iv_twiter"
            app:layout_constraintStart_toEndOf="@+id/iv_facebook"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_facebook"
            app:layout_constraintBottom_toBottomOf="@+id/iv_facebook"
            />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/instagram"
            android:id="@+id/iv_insta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/iv_facebook"
            app:layout_constraintTop_toTopOf="@+id/iv_facebook"
            app:layout_constraintBottom_toBottomOf="@+id/iv_facebook"
            />

</android.support.constraint.ConstraintLayout>
