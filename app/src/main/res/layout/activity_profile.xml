<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:gravity="center"
                android:title=""
                android:subtitle="sdfsfsfsfsfs"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay" >

                <RelativeLayout
                    android:layout_marginEnd="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvToolBarTitle"
                        android:gravity="center"
                        android:textColor="@color/blue1"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:text=""/>
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:id="@+id/flAvatarContainer"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" >

                        <ImageView
                            tools:ignore="ContentDescription"
                            android:id="@+id/ivAvatar"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <View
                            android:id="@+id/vBackground"
                            android:background="@drawable/awatar_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>


                    <TextView
                        android:id="@+id/tvName"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/public_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/etCard"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/switchRequests"
                            android:text="Разрешить запросы"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:clickable="false"
                            android:longClickable="false"
                            android:focusableInTouchMode="false"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <android.support.v7.widget.SwitchCompat
                            android:layout_marginEnd="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:text="TouchID для входа"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:clickable="false"
                            android:longClickable="false"
                            android:focusableInTouchMode="false"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/switchTouchId"
                            android:layout_marginEnd="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/vLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:text="Язык интерфейса"
                            android:layout_marginStart="20dp"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:clickable="false"
                            android:longClickable="false"
                            android:focusableInTouchMode="false"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/arrow_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/vChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:text="изменить пароль для входа"
                            android:layout_marginStart="20dp"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:clickable="false"
                            android:longClickable="false"
                            android:focusableInTouchMode="false"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/arrow_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/vExit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:text="выйти из аккаунта"
                            android:layout_marginStart="20dp"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:clickable="false"
                            android:longClickable="false"
                            android:focusableInTouchMode="false"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/arrow_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/vDeleteAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:textColor="@android:color/holo_red_dark"
                            android:text="Заявка на удаление аккаунта"
                            android:layout_marginStart="20dp"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:clickable="false"
                            android:longClickable="false"
                            android:focusableInTouchMode="false"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/arrow_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>


                </LinearLayout>

            </ScrollView>
            <!--  main activity content - here -->

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/navigation_view_base"/>

</android.support.v4.widget.DrawerLayout>