<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    tools:openDrawer="end">

    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:gravity="center"
                android:title=""
                android:subtitle=""
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay" >

                <RelativeLayout
                    android:layout_marginEnd="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvToolBarTitle"
                        android:gravity="center"
                        android:textColor="@color/blue1"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:text=""/>
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/flAvatarContainer"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" >

                        <ImageView
                            tools:ignore="ContentDescription"
                            android:id="@+id/ivAvatar"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <View
                            android:id="@+id/vBackground"
                            android:background="@drawable/awatar_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>


                    <TextView
                        android:id="@+id/tvName"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>




                    <LinearLayout
                        android:id="@+id/ll_card"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_light"
                            android:text="@string/public_card"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ll_public_card"
                                android:layout_toStartOf="@+id/iv_check"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:singleLine="true"
                                    android:fadingEdge="horizontal"
                                    android:ellipsize="end"
                                    android:maxEms="7"
                                    android:id="@+id/tv_card_name"
                                    android:textSize="22sp"
                                    android:textColor="@color/blue1"
                                    tools:text="депозитная ьььььььбьбьбкарта"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/gray"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="4dp"/>
                                <TextView
                                    android:singleLine="true"
                                    android:id="@+id/tv_card_number"
                                    android:textSize="16sp"
                                    android:textColor="@color/gray"
                                    tools:text="**** 7755"
                                    android:layout_width="72sp"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"/>
                            </LinearLayout>
                            <TextView
                                android:visibility="visible"
                                android:id="@+id/tv_add_card"
                                android:layout_toStartOf="@+id/iv_check"
                                android:singleLine="true"
                                android:fadingEdge="horizontal"
                                android:ellipsize="end"
                                android:maxEms="7"
                                android:textSize="22sp"
                                android:textColor="@color/blue1"
                                android:text="@string/add_card"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"/>

                            <ImageView
                                android:id="@id/iv_check"
                                android:layout_marginEnd="12dp"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card"/>
                        </RelativeLayout>



                        <View
                            android:layout_marginStart="38dp"
                            android:layout_marginTop="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/gray"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/switchRequests"
                            android:checked="true"
                            android:text="Разрешить запросы"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <android.support.v7.widget.SwitchCompat
                            android:layout_marginEnd="10dp"
                            android:checked="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content" />


                        <View
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/switchRequests"
                            android:layout_marginStart="30dp"
                            android:background="@color/grey2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvTouchId"
                            android:layout_marginTop="5dp"
                            android:text="TouchID для входа"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/switchTouchId"
                            android:checked="true"
                            android:layout_marginEnd="10dp"
                            android:layout_alignParentEnd="true"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content" />


                        <View
                            android:layout_marginTop="14dp"
                            android:layout_below="@+id/tvTouchId"
                            android:layout_marginStart="30dp"
                            android:background="@color/grey2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/vLanguage"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLanguage"
                            android:text="Язык интерфейса"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <ImageView
                            android:layout_marginEnd="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/arrow_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <View
                            android:layout_marginTop="14dp"
                            android:layout_below="@+id/tvLanguage"
                            android:layout_marginStart="30dp"
                            android:background="@color/grey2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/vChangePass"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvChangePass"
                            android:text="Изменить пароль для входа"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <ImageView
                            android:id="@+id/ivChangPass"
                            android:layout_marginEnd="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/arrow_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <View
                            android:layout_marginTop="14dp"
                            android:layout_below="@+id/tvChangePass"
                            android:layout_marginStart="30dp"
                            android:background="@color/grey2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/vExit"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvExit"
                            android:text="Выйти из аккаунта"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <ImageView
                            android:id="@+id/ivExitArrow"
                            android:layout_marginEnd="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/arrow_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <View
                            android:layout_marginTop="14dp"
                            android:layout_below="@+id/tvExit"
                            android:layout_marginStart="30dp"
                            android:background="@color/grey2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/vDelete"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvDelete"
                            android:text="Заявка на удаление аккаунта"
                            android:textSize="12sp"
                            android:textColor="@android:color/holo_red_dark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <ImageView
                            android:id="@+id/ivDeleteArrow"
                            android:layout_marginEnd="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/arrow_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <View
                            android:layout_marginTop="14dp"
                            android:layout_below="@+id/tvDelete"
                            android:layout_marginStart="30dp"
                            android:background="@color/grey2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </RelativeLayout>


                </LinearLayout>

            </ScrollView>
            <!--  main activity content - here -->

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/navigation_view_base"/>

</android.support.v4.widget.DrawerLayout>